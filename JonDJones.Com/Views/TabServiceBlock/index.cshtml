@model JonDJones.com.Core.ViewModel.Blocks.TabServiceViewModel

<section id="@Model.CurrentBlock.TabName">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <h2 class="section-heading">
                    @Model.CurrentBlock.DispalyName
                </h2>
                <hr class="primary">
            </div>
        </div>
    </div>
    <div class="container">
        <div class="row">
            <div class="col-lg-3 col-md-6 text-center">
                <div class="service-box">
                    <i class="fa fa-4x fa-diamond wow bounceIn text-primary"></i>
                    <h3>
                        @Model.CurrentBlock.MainTitle
                    </h3>
                    <p class="text-muted">
                        @Model.CurrentBlock.MainDescription
                    </p>
                </div>
            </div>
            <div class="col-lg-3 col-md-6 text-center">
                <div class="service-box">
                    <i class="fa fa-4x fa-paper-plane wow bounceIn text-primary" data-wow-delay=".1s"></i>
                    <h3>
                        @Model.CurrentBlock.SecondaryTitle
                    </h3>
                    <p class="text-muted">
                        @Model.CurrentBlock.SecondaryDescription
                    </p>
                </div>
            </div>
            <div class="col-lg-3 col-md-6 text-center">
                <div class="service-box">
                    <i class="fa fa-4x fa-newspaper-o wow bounceIn text-primary" data-wow-delay=".2s"></i>
                    <h3>
                        @Model.CurrentBlock.TertiaryTitle
                    </h3>
                    <p class="text-muted">
                        @Model.CurrentBlock.TertiaryDescription
                    </p>
                </div>
            </div>
            <div class="col-lg-3 col-md-6 text-center">
                <div class="service-box">
                    <i class="fa fa-4x fa-heart wow bounceIn text-primary" data-wow-delay=".3s"></i>
                    <h3>
                        @Model.CurrentBlock.QuaternaryTitle
                    </h3>
                    <p class="text-muted">
                        @Model.CurrentBlock.QuaternaryDescription
                    </p>
                </div>
            </div>
        </div>
    </div>
</section>